//storing in local storage

var take_input = document.getElementById('name');
var take_email = document.getElementById('email');
var btnsub = document.getElementById('btn-danger');

btnsub.onclick = function(){
    var input = take_input.value;
    var email = take_email.value;

    console.log(input);
    console.log(email);

    if (input && email){
        localStorage.setItem(input,email);
        location.reload();
    }

}
